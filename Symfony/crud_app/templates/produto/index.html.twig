{% extends 'base.html.twig' %}
{% block title %}{{ titulo }}{% endblock  %}
{% block body %}
    <h1>{{titulo}}</h1>
    <a href="{{ path('produto_adicionar') }}" class="link-primary">Adicionar </a>

    <form method="GET">
        <label>Pesquisar por nome:</label>
        <input type="text" name="nome" claass="form-control" value="{{ nomeproduto }}"></input>
        <button type="submit" class="btn btn-primary">Pesquisar</button>
    </fomt>

    <table class="table">
        <thead>
            <tr>
                <td>#</td>
                <td>Nome do produto</td>
                <td>Preço</td>
                <td>Categoria</td>
                <td>Ação</td>
            </tr>
        </thead>

        <tbody>
            {% for produto in produtos %}
            <tr> 
                <td> {{ produto.id }} </td>
                <td> {{produto.nomeproduto}} </td>
                <td> {{ produto.valor }} </td>
                <td> {{produto.categoria.descricaocategoria}} </td>
                <td>
                    <a href="{{ path('produto_editar', {id:produto.id}) }}" class="btn btn-warning">Editar</a>
                    <a href="{{ path('produto_excluir', {id:produto.id}) }}" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
            {% endfor %}
            
        </tbody>
    </table>
{% endblock body %}